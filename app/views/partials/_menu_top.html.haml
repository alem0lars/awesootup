%nav.top-bar

  -# == Title Area =======================================================

  %ul.title-area
    %li.name
      %h1= link_to(t('g_acronym'), '#')
    %li.toggle-topbar.menu-icon
      %a{ :href => '#' }
        %span= t('g_r_menu').titleize

  -# == Navigation =======================================================

  %section.top-bar-section

    -# == Left Navigation ================================================

    %ul.left
      %li
      %li.has-dropdown
        %a= t('awesootupmodules_title')
        %ul.dropdown

          %li.divider
          %li= link_to t('g_r_browse').titleize, awesootup_modules_path

          %li.divider
          %li= link_to(t('g_r_create').titleize, new_awesootup_module_path)

          %li.divider
          %li
            %label= t('g_r_edit').titleize
          %li.has-form
            %form
              .row.collapse
                .small-9.columns
                  = text_field_tag t('g_r_name').titleize, nil, :placeholder => t('g_r_module_name').titleize
                .small-3.columns
                  = button_to t('g_r_edit').titleize, awesootup_modules_path, :method => :edit, :class => 'button prefix'

          %li.divider
          %li
            %label= t('g_r_remove').titleize
          %li.has-form
            %form
              .row.collapse
                .small-9.columns
                  = text_field_tag t('g_r_name').titleize, nil, :placeholder => t('g_r_module_name').titleize
                .small-3.columns
                  = button_to t('g_r_remove').titleize, awesootup_modules_path, :method => :delete, :class => 'alert button prefix'

      %li.has-dropdown
        %a= t('contribute_title')
        %ul.dropdown
          %li
            %label= t('contribute_title')
          %li= link_to(t('g_r_website').titleize, contribute_path(:website))
          %li.divider
          %li= link_to(t('g_r_guides').titleize, contribute_path(:guides))
          %li= link_to(t('g_r_modules').titleize, contribute_path(:modules))

    -# == Right Navigation ===============================================

    %ul.right

      %li
        = link_to t('about_title'), 'javascript:void(0)', :class => 'social foundicon-torso go-to-bottom trigger-click', :'data-trigger-click-target' => '#about-project-title'
