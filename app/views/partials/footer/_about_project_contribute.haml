#about-project-contribute.row

  -# == Contribute for the infrastructure ======================================

  .large-7.columns
    .panel

      -# == Contribute for the website ===========================================

      #about-project-contribute-website

        %h5 Contribute for the website
        %ul
          %li
            %a.social.foundicon-github{ :href => @kb.ask(:links)[:project][:fork][:url] }
              = @kb.ask(:links)[:project][:fork][:title]
          %li Modify the website
          %li
            Make a
            %a.social.foundicon-github{ :href => @kb.ask(:links)[:project][:pull][:url] }
              = @kb.ask(:links)[:project][:pull][:title]

      %hr

      -# == Contribute for guides ================================================

      #about-project-contribute-guides

        %h5 Contribute for guides
        %ul
          %li
            %strong Create a new guide
            %ul
              %li Choose the existing modules you want
              %li
                Create the metadata for the module
              %li
                Create a
                %a.social.foundicon-github{ :href => @kb.ask(:links)[:project][:new_issue][:url] }
                  = @kb.ask(:links)[:project][:new_issue][:title]
                and include the created guide and its metadata as attachments
              %li
                If it is approved, you will see your guide in
                = @kb.ask(:website_info)[:acronym]
                and you in the contributors list

      %hr

      -# == Contribute for modules =================================================

      #about-project-contribute-modules

        %h5 Contribute for modules
        %ul
          %li
            %strong Create a new module
            %ul
              %li Create a new module
              %li Create the module metadata
              %li
                Create a
                %a.social.foundicon-github{ :href => @kb.ask(:links)[:project][:new_issue][:url] }
                  = @kb.ask(:links)[:project][:new_issue][:title]
                and include the created module and its metadata as attachments
          %li
            %strong Contribute to existing modules
            %ul
              %li
                Create a
                %a.social.foundicon-github{ :href => @kb.ask(:links)[:project][:new_issue][:url] }
                  = @kb.ask(:links)[:project][:new_issue][:title]
                for an existing module to
                %em fix
                or
                %em improve
                it

  .large-5.columns
    .panel

      -# == Make a donation ========================================================

      %h5= @kb.ask(:about)[:donation][:title]

      %p= @kb.ask(:about)[:donation][:subtitle]

      %form{ :action => 'https://www.paypal.com/cgi-bin/webscr', :method => 'post' }
        %input{ :name => 'cmd', :type => 'hidden', :value => '_s-xclick' }
        %input{ :name => 'encrypted', :type => 'hidden', :value => '-----BEGIN PKCS7----------END PKCS7-----' }
        %input{ :alt => 'PayPal â€” The safer, easier way to pay online.', :border => '0', :name => 'submit', :src => 'https://www.paypalobjects.com/en_US/GB/i/btn/btn_donateCC_LG.gif', :type => 'image' }
        %img{ :alt => '', :border => '0', :height => '1', :src => 'https://www.paypalobjects.com/it_IT/i/scr/pixel.gif', :width => '1' }

      %p= @kb.ask(:about)[:donation][:reason]
